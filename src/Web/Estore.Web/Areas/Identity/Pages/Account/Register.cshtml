@page
@model RegisterModel

<section class="main-content-section">
    <div class="container">
        <div class="bstore-breadcrumb">
            <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            <span><i class="fa fa-caret-right"></i></span>
            <span>Register</span>
        </div>

        <div class="row">
            <div class="col-lg-6">
                <!-- CREATE-NEW-ACCOUNT START -->
                <div class="create-new-account">
                    <form asp-route-returnUrl="@Model.ReturnUrl" class="new-account-box primari-box" id="create-new-account" method="post">
                        <h3 class="box-subheading">Create an account</h3>
                        <div asp-validation-summary="All" class="form-content">
                            <p>Please enter your email address to create an account.</p>
                            <div class="form-group primary-form-group">
                                <label asp-for="Input.Email"></label>
                                <input asp-for="Input.Email" id="email" class="form-control input-feild">
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group primary-form-group">
                                <label asp-for="Input.Password"></label>
                                <input asp-for="Input.Password" id="email" class="form-control input-feild">
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group primary-form-group">
                                <label asp-for="Input.ConfirmPassword"></label>
                                <input asp-for="Input.ConfirmPassword" id="email" class="form-control input-feild">
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="Input.Gender" value="Male"/>
                                <label class="form-check-label">Male</label>
                            </div>

                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="Input.Gender" value="Female" />
                                <label class="form-check-label">Female</label>
                            </div>
                            <br />
                            <div class="submit-button">
                                <button type="submit" class="btn btn-primary btn-danger">
                                    <span>
                                        <i class="fa fa-user submit-icon"></i>
                                        Create an account
                                    </span>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
                <!-- CREATE-NEW-ACCOUNT END -->
            </div>
