@using Estore.Web.ViewModels.Administration.Reviews
@model EditReviewInputModel

@{
    ViewData["Title"] = "Edit review";
    var products = this.Model.Products.Select(x => new SelectListItem(x.Value, x.Key));
}
<br />
<h2>@ViewData["Title"]</h2>
<br />
<form method="post" asp-controller="Reviews" asp-action="Edit" >
    <div class="form-group">
      <label asp-for="Author"></label>
      <input asp-for="Author" class="form-control"/>
      <span asp-validation-for="Author" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
      <label asp-for="Content"></label>
      <textarea asp-for="Content" class="form-control"></textarea>
      <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
      <label asp-for="ProductId"></label>
      <select asp-for="ProductId" asp-items="products" class="form-control"></select>
      <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>
    <br />
    <div class="submit-button">
        <input type="hidden" asp-for="Id"/>
        <button type="submit" class="btn main-btn">
            <span>Edit</span>        
        </button>
    </div>
</form>
