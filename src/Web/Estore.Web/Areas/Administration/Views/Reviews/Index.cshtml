@using Estore.Web.ViewModels.Administration.Reviews
@model IndexViewModel

<br />
<div class="container">	
	<div class="row">
		<div class="col-lg-12">
			<h2 class="page-title">Reviews</h2>

			<!-- WISHLISTS-CHART START -->
			<div class="wishlists-chart table-responsive">
				<table class="table table-striped table-hover">
					<tbody>
						<tr>
							<th class="wish-name">Author</th>
							<th class="wish-description">Content</th>
							<th class="wish-create">Added On</th>
							<th class="wish-create">Product</th>
							<th class="wish-link">Edit</th>
							<th class="wish-delete">Delete</th>
						</tr>
						@foreach (var review in @Model.Reviews)
						{
							<tr>
								<td>
									<span>@review.Author</span>
								</td>
								<td>
									<span>@review.Content</span>
								</td>
								<td>
									<span>@review.CreatedOn.ToShortDateString()</span>
								</td>
								<td>
									<span>
										<a asp-area="" asp-controller="Products" asp-action="Details" asp-route-id="@review.ProductId">
											@review.ProductName
										</a>
									</span>
								</td>
								<td>
									<a class="btn btn-danger text-white" asp-controller="Reviews" asp-action="Edit" asp-route-id="@review.Id">
										Edit
									</a>
								</td>
								<td>
									<form method="post" asp-controller="Reviews" asp-action="Delete">
										<span>
											<button type="submit" class="btn-close btn-sm" data-toggle="modal" data-target="#modalDelete" title="Delete"></button>
										</span>
										<input type="hidden" name="id" value="@review.Id">
									</form>
								</td>
							</tr> 
						}
					</tbody>
				</table>
			</div>
			<!-- WISHLISTS-CHART END -->

			<!-- WISH-LIST BACT HOME START-->
			<div class="wish-back-link">
				<a class="wish-save" asp-area="" asp-controller="Home" asp-action="Index">
					<i class="fa fa-chevron-left"></i> Back to home page
				</a>
			</div>
			<!-- WISH-LIST BACT HOME END -->
		</div>
	</div>
</div>