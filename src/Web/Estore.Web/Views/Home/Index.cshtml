@using Estore.Web.ViewModels.Home
@model IndexViewModel

<div id="messageBody"></div>

<!-- MAIN-SLIDER-AREA START -->
<div class="row main-slider-area">
    <!-- SLIDER-AREA START -->
    <div class="col-md-9">
        <div class="slider-area">
            <div id="wrapper">
                <div class="slider-wrapper">
                    <div id="mainSlider" class="nivoSlider">
                        <img src="~/assets/images/slider/2.webp" alt="main slider" title="#htmlcaption" />
                        <img src="~/assets/images/slider/1.webp" alt="main slider" title="#htmlcaption2" />
                    </div>
                    <div id="htmlcaption" class="nivo-html-caption slider-caption">
                        <div class="slider-progress"></div>
                        <div class="slider-cap-text slider-text1">
                            <div class="d-table-cell">
                                <h2 class="animated bounceInDown">BEST THEMES</h2>
                                <p class="animated bounceInUp">
                                    Lorem ipsum dolor sit amet, consectetuer
                                    adipiscing elit, sed diam nonummy nibh euismod ut laoreet dolore magna
                                    aliquam erat volutpat.
                                </p>
                                <a class="wow zoomInDown" data-wow-duration="1s" data-wow-delay="1s"
                                   href="#">Read More <i class="fa fa-caret-right"></i></a>
                            </div>
                        </div>
                    </div>
                    <div id="htmlcaption2" class="nivo-html-caption slider-caption">
                        <div class="slider-progress"></div>
                        <div class="slider-cap-text slider-text2">
                            <div class="d-table-cell">
                                <h2 class="animated bounceInDown">BEST THEMES</h2>
                                <p class="animated bounceInUp">
                                    Lorem ipsum dolor sit amet, consectetuer
                                    adipiscing elit, sed diam nonummy nibh euismod ut laoreet dolore magna
                                    aliquam erat volutpat.
                                </p>
                                <a class="wow zoomInDown" data-wow-duration="1s" data-wow-delay="1s"
                                   href="#">Read More <i class="fa fa-caret-right"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- SLIDER-AREA END -->
    <!-- SLIDER-RIGHT START -->
    <div class="col-md-3">
        <div class="slider-right zoom-img m-top">
            <a href="#"><img class="img-responsive" src="~/assets/images/product/cms11.webp" alt="sidebar left" /></a>
        </div>
    </div>
    <!-- SLIDER-RIGHT END -->
</div>
<!-- MAIN-SLIDER-AREA END -->
<!-- LATEST-PRODUCTS-AREA START -->
<div class="featured-products-area">
    <div class="center-title-area">
        <h2 class="center-title">Latest Products</h2>
    </div>

    <div class="carousel-wrap">
        <!-- LATEST-CAROUSEL START -->
        <div class="feartured-carousel owl-carousel">
            @foreach (var product in @Model.LatestProducts)
           {
                <div class="single-product-item">
                    <div class="product-image">
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">
                            <img src="@product.ImageUrl" alt="product-image" />
                        </a>
                        <span class="new-mark-box">New</span>
                        <div class="overlay-content">
                            <ul>
                                <li>
                                    <a id="@product.Id" title="Add to cart">
                                        <i class="fa fa-shopping-cart"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="#" title="Add to wishlist">
                                        <i class="fa fa-heart-o"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="product-info">
                        <div class="customar-comments-box">
                            <div class="rating-box">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star-half-empty"></i>
                            </div>
                            <div class="review-box">
                                <span>1 Review (s)</span>
                            </div>
                        </div>
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">@product.Name</a>
                        <div class="price-box">
                            <span class="price">$@product.Price</span>
                        </div>
                    </div>
                </div>
           } 
        </div>
        <!-- LATEST-CAROUSEL END -->
    </div>
</div>
<!-- LATEST-PRODUCTS-AREA END -->
<!-- ADD-TWO-BY-ONE-COLUMN START -->
<div class="add-two-by-one-column">
    <div class="row">
        <div class="col-md-8">
            <div class="tow-column-add zoom-img">
                <a href="#"><img src="assets/images/product/shope-add1.webp" alt="shope-add" /></a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="one-column-add zoom-img">
                <a href="#"><img src="assets/images/product/shope-add2.webp" alt="shope-add" /></a>
            </div>
        </div>
    </div>
</div>
<!-- ADD-TWO-BY-ONE-COLUMN END -->

<!-- MOST-DSICOUNTED-PRODUCTS-AREA START -->
<div class="bestseller-products-area">
    <div class="center-title-area">
        <h2 class="center-title">Most Discounted</h2>
    </div>
    <div class="carousel-wrap">
        <!-- MOST-DSICOUNTED-CAROUSEL START -->
        <div class="bestseller-carousel owl-carousel">
            @foreach (var product in @Model.MostDiscountedProducts)
            {
                 <div class="single-product-item">
                    <div class="product-image">
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">
                            <img src="@product.ImageUrl" alt="product-image" />
                        </a>
                        <span class="new-mark-box">Sale</span>
                        <div class="overlay-content">
                            <ul>
                                <li>
                                    <a href="#" title="Add to cart">
                                        <i class="fa fa-shopping-cart"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="#" title="Add to wishlist">
                                        <i class="fa fa-heart-o"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="product-info">
                        <div class="customar-comments-box">
                            <div class="rating-box">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star-half-empty"></i>
                            </div>
                            <div class="review-box">
                                <span>1 Review (s)</span>
                            </div>
                        </div>
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">@product.Name</a>
                        <div class="price-box">		<span class="price">$@product.DiscountedPrice</span>		<span class="old-price">$@product.Price</span>	</div>
                    </div>
                </div>
            }
        </div>
        <!-- MOST-DISCOUNTED-CAROUSEL END -->
    </div>
</div>
<!-- MOST-DSICOUNTED-PRODUCTS-AREA END -->

@section Scripts {
    <script>
        $("a[id]").each(function myFunction(el) {
            $(this).click(function () {
                var productId = $(this).attr("id");
                var quantity = 1;
                var data = { productId: productId, quantity: quantity };
                $.ajax({
                    type: "POST",
                    url: "/api/Carts",
                    data: JSON.stringify(data),               
                    success: function(data) {
                       $('#messageBody').html(
                        '<div class="alert alert-success" role="alert"><span>' + data + '</span><button onclick="closeMessage()" type="button" class="btn-close btn-sm" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button></div>');
                    },
                    contentType: 'application/json',
                });
            })
        });

        function closeMessage() {
            let messageTag = document.getElementById('messageBody');
            messageTag.style.display = "none";
        }
    </script>
}